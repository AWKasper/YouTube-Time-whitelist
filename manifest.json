{
  "manifest_version": 3,
  "name": "YouTube Time",
  "description": "Prevent procrastination by setting a daily time limit for your YouTube usage.",
  "version": "1.5.0",
  "icons": {
    "128": "images/icon - 128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtubekids.com/*"
      ],
      "css": ["css/overlay.css"],
      "js": ["js/jquery-3.3.1.min.js", "saveVideo.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "/images/icon.png",
    "default_popup": "/pages/popup.html"
  },
  "options_page": "/pages/options.html",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
     "*://*.youtube.com/*",
     "*://*.youtubekids.com/*"
  ]
}